<UserControl x:Class="VideoCompressorGUI.ContentControls.Components.HeaderedSeperator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:components="clr-namespace:VideoCompressorGUI.ContentControls.Components"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" VerticalAlignment="Center"  Width="10" Height="1" Fill="#9f9f9f" />
        <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding Header, RelativeSource={RelativeSource AncestorType={x:Type components:HeaderedSeperator}}}"/>
        <Rectangle Grid.Column="2" VerticalAlignment="Center" Margin="5, 0, 5, 0" Height="1" Fill="#9f9f9f" />
    </Grid>
</UserControl>
